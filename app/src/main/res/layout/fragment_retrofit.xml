<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.wenyuan.myandroiddemo.thirdparty.networkframe.retrofit.RetrofitFragment">


    <Button
        android:id="@+id/but_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" android:elevation="1dp"
        android:text="start" android:textAllCaps="false"/>
    <TextView
        android:id="@+id/text_show_retrofit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" android:layout_below="@+id/but_start"
        android:layout_marginTop="8dp" android:text="text_show"/>
</RelativeLayout>
