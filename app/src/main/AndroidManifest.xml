<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.wenyuan.myademo"
          xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".encrypt.EncyptActivity">
        </activity>
        <activity
            android:name=".hardware.camera.SysCameraActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|locale|fontScale|layoutDirection"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".hardware.camera.CustomCameraActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|locale|fontScale|layoutDirection"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".detail.permission.PermissionActivity">
        </activity>
        <activity android:name=".detail.picture.HandlerPicActivity">
        </activity>
        <activity
            android:name=".MoreActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_more"
            android:theme="@style/FullscreenTheme">
        </activity>
    </application>

</manifest>