<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_custom_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wenyuan="http://schemas.android.com/apk/res/com.wenyuan.myandroiddemo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wenyuan.myandroiddemo.customview.CustomViewActivity" tools:ignore="ResAuto">

    <include
        layout="@layout/title_bar"/>

    <com.wenyuan.myandroiddemo.customview.view.FlowText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        wenyuan:flowtext="流动的文字"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

</LinearLayout>
