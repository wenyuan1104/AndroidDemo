<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_socket"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wenyuan.myandroiddemo.other.socket.SocketActivity">

    <include layout="@layout/title_bar" />


    <TextView
        android:id="@+id/text_socket_server"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="接收客户端数据"
        android:textColor="@android:color/darker_gray" />

    <EditText
        android:id="@+id/edit_socket_server"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="please input" />

    <Button
        android:id="@+id/but_socket_server"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="send to client"
        android:textAllCaps="false" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="8dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/text_socket_client"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="服务启动失败"
        android:textColor="@android:color/darker_gray" />

    <EditText
        android:id="@+id/edit_socket_client"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="please enter" />

    <Button
        android:id="@+id/but_socket_client"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="upload"
        android:textAllCaps="false" />


</LinearLayout>
